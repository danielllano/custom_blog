
<%= form_for(@post) do |f| %>
	<% if @post.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
		  <ul>
		  <% @post.errors.full_messages.each do |msg| %>
		    <li><%= msg %></li>
		  <% end %>
		  </ul>
		</div>
	<% end %>

	<div class="form-group">
		<%= f.label :title, class:"form-label" %>
		<%= f.text_field :title, class:"form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :author, class:"form-label" %>
		<%= collection_select(:post, :author_id, Author.all, :id, :name, {class: "form-control"}) %>
	</div>

		<div class="form-group">
			<%= f.label :published_at, class:"form-label" %>
			<%= f.date_field :published_at, class:"form-control" %>
		</div>

	<div class="form-group">
		<%= f.label :content, class:"form-label" %><br>
		<%= f.text_area :content, class:"form-control", rows:"3" %>
	</div>

	<div class="checkbox">
		<%= f.check_box :published %>
		<%= f.label :publish, class:"form-label" %>	
	</div>

	<div class="actions">
    <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  </div>

<% end %>
