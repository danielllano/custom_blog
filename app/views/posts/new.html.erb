<h1>New post</h1>



<%= form_for :post do |f| %>
		<p>
			<%= f.label :title %><br>
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label :author %><br>
			<%= f.text_field :author %>
		</p>

		<p>
			<%= f.label :published %><br>
			<%= f.check_box :author %>
		</p>

			<p>
				<%= f.label :published_at %><br>
				<%= f.date_field :published_at %>
			</p>

		<p>
			<%= f.label :content %><br>
			<%= f.text_area :content %>
		</p>

		<p>
			<%= f.submit %>
		</p>

<% end %>



