<div class="container">

  <div class="blog-header">
    <h1 class="blog-title">Lista de Posts</h1>
    <p class="lead blog-description">Adminitrador de articulos de interés común</p>
  </div>
  <div class="row">
    <div class="new-post col-md-4 col-md-offset-8">
      <%= link_to 'Nuevo Post', new_post_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 blog-main">
       
        <% @posts.each do |post| %>
          <div class="blog-post">
            <h2 class="blog-post-title"><%= post.title %></h2>
            <p class="blog-post-meta"><%= post.published_at %> by <%= post.author.name %></p>
            <p>Post publicado <%= post.published %></p>
            <p class="contenido"><%= post.content %></p>
            <%= link_to 'Ver', post_path(post), class: "btn btn-default" %>
            <%= link_to 'Editar', edit_post_path(post), class: "btn btn-default" %>
            <%= link_to 'Eliminar', post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        <% end %>

    </div>

    
  </div>
</div>
