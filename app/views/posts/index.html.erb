<h1>Lista de Posts</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Autor</th>
    <th>Fecha de publicaci√≥n</th>
    <th>Publicado?</th>
    <th>Contenido</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.author.name %></td>
      <td><%= post.published_at %></td>
      <td><%= post.published %></td>
